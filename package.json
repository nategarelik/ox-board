{
  "name": "ox-board",
  "version": "1.0.0",
  "description": "Open-source gesture-controlled DJ platform using webcam hand tracking",
  "keywords": [
    "dj",
    "music",
    "gesture-control",
    "hand-tracking",
    "mediapipe",
    "audio-mixer",
    "web-audio",
    "nextjs",
    "react",
    "typescript"
