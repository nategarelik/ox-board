    "optimize:images": "echo 'Image optimization would run here'",
    "optimize:fonts": "echo 'Font optimization would run here'",
    "lighthouse": "lighthouse http://localhost:3000 --view",
    "activity:log": "node scripts/activity-logger.js log",
    "activity:recent": "node scripts/activity-logger.js recent",
    "activity:report": "node scripts/activity-logger.js report",
    "prepare": "husky"
  },
